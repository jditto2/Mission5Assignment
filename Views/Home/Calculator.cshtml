@{
    ViewData["Title"] = "3D Printing Tutoring Calculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="icon" type="image/png" href="~/images/3d-icon.png" />
</head>
<body>
<header>
    <h1>3D Printing Tutoring Calculator</h1>
</header>

<main>
    <label for="hours">Enter number of tutoring hours:</label>
    <input type="number" id="hours" min="1" />
    <br />

    <label for="rate">Rate per hour:</label>
    <input type="text" id="rate" value="25" readonly /> USD
    <br />

    <button id="calculateBtn">Calculate Total</button>
    <br />

    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly />
</main>

<footer>
    <p>&copy; 2024 Joshua Ditto - Helping you master 3D printing!</p>
    <a href="/Home/Index">Back to Home</a>
</footer>

<script>
        $(document).ready(function() {
            $('#calculateBtn').click(function() {
                var hours = parseFloat($('#hours').val());
                var rate = parseFloat($('#rate').val());

                if (isNaN(hours) || hours <= 0) {
                    alert('Please enter a positive number of hours.');
                    return;
                }

                var total = hours * rate;
                $('#total').val(total.toFixed(2));
            });
        });
    </script>
</body>
</html>